# [ Project ]
COMPOSE_PROJECT_NAME=cftf
PORT=3000
APP_ENV=prod
APP_DEBUG=false
APP_SECRET=ThisTokenIsNotSoSecretSoChangeIt
COOKIE_SECRET=ThisTokenIsNotSoSecretChangeIt
#XDEBUG_CONFIG= Your IP address

# [ Container ]
CONTAINER_REPO=postgres

# [ Database Configuration ]
DATABASE_BRAND=pgsql
DATABASE_CHARSET=UTF8
DATABASE_DRIVER=pdo_pgsql
DATABASE_FILTER=''
DATABASE_HOST=db
DATABASE_NAME=cftf
DATABASE_PASSWORD=cftf
DATABASE_PORT=5432
DATABASE_USER=cftf
DATABASE_VERSION=12.3
DB_USE_RDS_CERT=0

# [ MySQL Specific ]
MYSQL_ROOT_PASSWORD=${DATABASE_PASSWORD:-cftf}
MYSQL_DATABASE=${DATABASE_NAME:-cftf}
MYSQL_USER=${DATABASE_USER:-cftf}
MYSQL_PASSWORD=${DATABASE_PASSWORD:-cftf}
MYSQL_HOST=${DATABASE_HOST:-db}

# [ Postgres Specific ]
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=postgres

# [ Locale ]
LANG=en_US.UTF-8
LANGUAGE=en_US:en
LC_ALL=en_US.UTF-8

# [ Mail ]
USE_MAIL_FEATURE=inactive
MAIL_FEATURE_FROM_EMAIL=send@example.com
